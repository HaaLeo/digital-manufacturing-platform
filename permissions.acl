/**
 * Access control rules for decentralized-energy-network
 */

//Customers to have read only access to other Printer
rule CustomerReadAccessPrinters {
    description: "Allow Customer read access to Printer"
    participant: "org.usecase.printer.Customer"
    operation: READ
    resource: "org.usecase.printer.Customer"
    action: ALLOW
}

